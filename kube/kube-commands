
# common
kubectl get pod
kubectl get svc


# master
kubectl logs -f master -c master-provider
kubectl logs -f master -c nodeid-server
kubectl logs -f master -c synerex-server
kubectl describe pod master

# worker
kubectl logs -f worker -c worker-provider
kubectl logs -f worker -c nodeid-server
kubectl logs -f worker -c synerex-server
kubectl logs -f worker -c agent-provider
kubectl logs -f worker -c visualization-provider
kubectl describe pod worker

# simulator
kubectl exec -it simulator -c simulator bash

# pod-manager
kubectl logs -f pod-manager-jgtrh -c pod-manager
kubectl exec -it pod-manager-jgtrh -c pod-manager bash

# delete Evitched
kubectl get pods | awk '{if ($3 ~ /Evicted/) system ("kubectl delete pods " $1)}'

# volume
kubectl apply -f volume.yaml
kubectl get pv,pvc

# delete
# podを指定すると再生成してしまうためdeploymentを削除する
kubectl delete deployment master

# dashboard
https://qiita.com/suwa3/items/d7d13afa681f9d199ebb
kubectl apply -f https://raw.githubusercontent.com/kubernetes/dashboard/v2.0.0-beta8/aio/deploy/recommended.yaml
kubectl proxy
kubectl -n kubernetes-dashboard get secret
kubectl -n kubernetes-dashboard describe secret kubernetes-dashboard-token-xxxxx


# drain
kubectl drain lotus2.novalocal --ignore-daemonsets
kubectl uncordon lotus2.novalocal